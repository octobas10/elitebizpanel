# Copy to .env and set your values:  cp .env.example .env
# Docker Compose loads this for the app service. Local runs use config defaults if unset.

# Database (used when running in Docker or when config reads from env)
DB_HOST=db
DB_USER=root
DB_PASSWORD=root

# Redis (used for rate-limiting / cache when running in Docker)
REDIS_HOST=redis
REDIS_PORT=6379

# Optional: framework bootstrap path (Docker sets this in compose if needed)
# YII_PATH=/opt/yii/framework/yii.php
# YII_DEBUG=1
